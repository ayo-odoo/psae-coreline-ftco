<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="pos_bundle_form_view" model="ir.ui.view">
            <field name="name">pos_bundle.form</field>
            <field name="model">pos.bundle</field>
            <field name="arch" type="xml">
                <form string="POS Bundle">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="product_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pos_bundle_tree_view" model="ir.ui.view">
            <field name="name">ProjectName.pos_bundle.tree</field>
            <field name="model">pos.bundle</field>
            <field name="arch" type="xml">
                <tree string="POS Bundles">
                    <field name="name"/>
                    <field name="product_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="pos_bundle_act_window" model="ir.actions.act_window">
            <field name="name">POS Bundle</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pos.bundle</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="POS Bundles" id="pos_bundle_menu" parent="point_of_sale.pos_config_menu_catalog"
                  action="pos_bundle_act_window"/>

    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="root_task_view_tree" model="ir.ui.view">
        <field name="name">root.task.view.tree</field>
        <field name="model">root.task</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="title"/>
            </tree>
        </field>
    </record>

    <record id="root_task_view_action" model="ir.actions.act_window">
        <field name="name">root.task.view.action</field>
        <field name="res_model">root.task</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p>
                No Tasks Yet !!!
            </p>
        </field>
    </record>

    <menuitem id="root_task_menu"
              name="Tasks"
              action="meta_task.root_task_view_action"
              sequence="1"/>

    <menuitem id="root"
          name="Tasks"
          parent="meta_task.root_task_menu"
          sequence="1"/>
</odoo>

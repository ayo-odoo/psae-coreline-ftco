<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="business_view_tree" model="ir.ui.view">
        <field name="name">business.view.tree</field>
        <field name="model">business.type</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
                <field name="icon"/>
            </tree>
        </field>
    </record>

    <record id="business_view_action" model="ir.actions.act_window">
        <field name="name">business.view.action</field>
        <field name="res_model">business.type</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p>
                No Business Records Yet !!!
            </p>
        </field>
    </record>

    <menuitem id="root_business"
              action="business_view_action"
              name="Business Type"
              parent="account.menu_finance_receivables"
              sequence="1"/>
</odoo>
